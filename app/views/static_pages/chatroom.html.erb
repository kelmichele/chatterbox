<div class="full" style="background-color: #f2f2f2;">
  <div class="wrap">

    <div class="col-md-6 col-md-offset-1">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <!-- <% if conversation.messages.count > 0 %>  -->
            <%= render 'conversations/conversation', conversation: conversation, user: current_or_guest_user %>
          <!-- <% end %>   -->
        <% end %>
      </ul>
    </div>

    <div class="col-md-3">
      <div class="panel panel-primary text-center">
        <div class="panel-heading">
          <h3 class="panel-title">Chat With Us</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @users.each do |user| %>
              <br><li><%= link_to user.name, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>



