<div class="full" style="background-color: #f2f2f2;">
  <div class="wrap">

    <div class="row">
      <div class="col-md-9">
        <ul id="customer_chats-list">
          <% @customer_chats.each do |customer_chat| %>
            <%= render 'customer_chats/customer_chat', customer_chat: customer_chat, user: current_or_guest_user %>
          <% end %>
        </ul>
      </div>

      <div class="col-md-3">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">User list</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @users.each do |user| %>
                <li><%= link_to user.name, customer_chats_path(user_id: user), remote: true, method: :post %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
