<div class="livechat-box">
		<% unless user_signed_in? && current_user.admin? %>
      <% @users.each do |user| %>
        <%= link_to 'Online: Chat With Us', conversations_path(user_id: user), remote: true, method: :post  %>
      <% end %>
    <% end %>

			<ul id="conversations-list">
				<% conversations_windows.each do |conversation| %>
				  <%= render partial: 'conversations/conversation', locals: { conversation: conversation, user: current_or_guest_user } %>
				<% end %>
			</ul>
</div>
