<li class="pers-chat">
<!-- <li> -->
  <div class="panel panel-default" data-customer_chat-id="<%= customer_chat.id %>">
    <div class="panel-heading">
      <%= link_to customer_chat.opposed_user(user).email, class: 'toggle-window' do %>
        <%= image_tag('chat.png', class:'chat-icon') %>
        <span class="ofc-online"><b>Online</b> - Chat with us</span>
        <div class="btn btn-xs exp">â€”</div>
      <% end %>

      <%= link_to "X", close_customer_chat_path(customer_chat), class: "btn btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="notes-list">
        <ul>
          <%= render 'customer_chats/chat_content', notes: customer_chat.notes, user: user %>
        </ul>
      </div>

      <form class="new_note">
        <input name="customer_chat_id" type="hidden" value="<%= customer_chat.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <textarea name="body" class="form-control"></textarea>
        <input type="submit" class="btn btn-success" value="Send">
      </form>
    </div>
  </div>
</li>
